<!DOCTYPE html>
<html>
  <head>
    <title>FakeWeichat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<br><br><br>
	<div class="container">
		<div class="col-sm-2" style="border: 1px solid red;">
			<!-- <div class="container"> -->
			<%= render "common/sidebar" %>
			<!-- </div> -->
		</div>

		<div class="col-sm-4">
			<div id="friend-search-container" class="row text-center">
				<div id="friend-search-head" class="form-inline">
					
					<%= text_field_tag 'search-friends-field', nil, placeholder: "搜索联系人", url: search_friends_contacts_path, class: "form-control" %>

					<%= link_to "+", contacts_path, class: "btn btn-default btn-xs pull-right form-control" %>
				</div>
				<hr>
				<div id="friend-search-body">
					
				</div>
			</div>
			
			<div id="friend-list-container" class="row">
				<%= render partial: "common/friend_list", locals: {friends: current_user.friends} %>
			</div>


		</div>

		<div class="col-sm-6">
	    	<%= yield %>
	    </div>
    </div>
  </body>
</html>