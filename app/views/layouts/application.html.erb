<!DOCTYPE html>
<html>
  <head>
    <title>FakeWeichat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<br><br><br>
	<div class="container">
		<div class="col-sm-2" style="border: 1px solid red;">
			<!-- <div class="container"> -->
				<h2>微信</h2>
				<ul class="nav nav-pills nav-stacked" role="tablist">
					<li class="active"><%= link_to "消息" %></li>
					<li><%= link_to "联系人" %></li>
				</ul>
			<!-- </div> -->
		</div>

		<div class="col-sm-4">
			<div class="row text-center">
				<span>Search</span>
			</div>
			<div class="row">
				<% if user_signed_in? %>
					<% current_user.chatrooms.public_channels.each do |chatroom| %>
						<li><%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %></li>
					<% end %>
				<% end %>
			</div>
			<div class="row">
				<h5>Users</h5>
				<ul>
					<% (User.all - [current_user]).each do |user| %>
						<li><%= link_to user.username, direct_message_path(user.id), data: {behavior: "chatroom-link", chatroom_id: Chatroom.direct_message_for_users([current_user, user]).id } %></li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="col-sm-6">
	    	<%= yield %>
	    </div>
    </div>
  </body>
</html>
