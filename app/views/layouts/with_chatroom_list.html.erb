<!DOCTYPE html>
<html>
  <head>
    <title>FakeWeichat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	<div class="container weichat-container">
		<div class="col-sm-1 weichat-sidebar">
			<%= render "common/sidebar" %>
		</div>
		
		<div class="col-sm-4 chatroom-middle-bar" style="height: 100%;">
			<div id="chatroom-search-container" class="row text-center" style="height: 10%;">
				<div id="chatroom-search-head" class="form-inline">
					<%= text_field_tag 'search-chatrooms-field', nil, placeholder: "搜索聊天室", url: search_chatrooms_path %>

					<%= link_to "+", new_chatroom_path, class: "btn btn-default btn-xs", id:"create_new_chatroom_btn" %>
				</div>
			</div>

			<div class="row chatroom-list" id="chatrooms-list-container">
				<%= render partial: "common/chatrooms_list", locals: { chatrooms: current_user.chatrooms } %>
			</div>
		</div>

		<div class="col-sm-7" style="height: 100%;">
	    	<%= yield %>
	    </div>
    </div>
  </body>
</html>