<!DOCTYPE html>
<html>
  <head>
    <title>FakeWeichat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<br><br><br>
	<div class="container">
		<div class="col-sm-2" style="border: 1px solid red;">
			<!-- <div class="container"> -->
			<%= render "common/sidebar" %>
			<!-- </div> -->
		</div>
		
		<%# if user_signed_in? %>
			<div class="col-sm-4">
				<div class="row text-center">
					<span>Search<%= link_to "+", new_chatroom_path, class: "btn btn-default btn-xs pull-right" %></span>
				</div>
				<div class="row">
					<ul class="nav nav-pills nav-stacked">
						<% current_user.chatrooms.order(updated_at: :desc).each do |chatroom| %>
							<li>
								<%= link_to chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} do %>
									<div class="media">
										<div class="media-left">
											<img src="http://via.placeholder.com/64x64" alt="" class="media-object">
										</div>
										<div class="media-body">
											<h5 class="media-heading"><%= chatroom.name %></h5>
											<small><%= "你好，我上次跟你说的内容...." %></small>
										</div>
									</div>
								<% end %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>

			<div class="col-sm-6">
		    	<%= yield %>
		    </div>
	    <%# else %>

	    <%# end %>
    </div>
  </body>
</html>